<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.shape.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.utez.objetosperdidos.view.LoginController"
            style="-fx-background-color: white;">

    <center>
        <HBox>
            <!-- Panel izquierdo (Login) -->
            <VBox alignment="CENTER_LEFT" style="-fx-padding: 40px; -fx-spacing: 20px; -fx-pref-width: 400px;">
                <!-- Contenido del login (igual al anterior) -->
                <Label text="¡Bienvenido!" style="-fx-text-fill: #5A777D; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label text="Iniciar Sesión Objetos Perdidos" style="-fx-font-size: 24px;"/>
                
                <VBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 30px; -fx-min-width: 350px;">
                    <Label text="Usuario/Correo" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="emailField" promptText="Example@utez.edu.mx"
                              style="-fx-pref-width: 300px; -fx-pref-height: 35px;"/>
                    
                    <Label text="Contraseña" style="-fx-font-weight: bold;"/>
                    <PasswordField fx:id="passwordField"
                                 style="-fx-pref-width: 300px; -fx-pref-height: 35px;"/>
                                        
                    
                    
                    <Button text="Iniciar Sesión" onAction="#onSignIn"
                           style="-fx-background-color: #62C070; -fx-text-fill: white; -fx-pref-width: 300px; -fx-pref-height: 40px; -fx-font-weight: bold;"/>
                    
                    <Separator style="-fx-padding: 10px 0;"/>
                    
                    <HBox spacing="5" alignment="CENTER">
                        <Label text="¿No tienes una cuenta?"/>
                        <Hyperlink text="Registrarse" onAction="#onSignUpLink"
                                  style="-fx-text-fill: #5BBCE9; -fx-underline: true; -fx-padding: 0;"/>
                    </HBox>
                    
                    <HBox alignment="CENTER" style="-fx-padding: 5px 0;">
                    <Hyperlink text="Leer Políticas de privacidad" onAction="#onPrivacy"
                    style="-fx-text-fill: #7f8c8d;"/>
                    </HBox>
                </VBox>
            </VBox>

            <!-- Panel derecho con AnchorPane -->
            <AnchorPane style="-fx-background-color: #e0e0e0; -fx-pref-width: 500;">
                <Rectangle fill="#e0e0e0"
                          AnchorPane.topAnchor="0"
                          AnchorPane.bottomAnchor="0"
                          AnchorPane.leftAnchor="0"
                          AnchorPane.rightAnchor="0"/>
            </AnchorPane>
        </HBox>
    </center>
</BorderPane>