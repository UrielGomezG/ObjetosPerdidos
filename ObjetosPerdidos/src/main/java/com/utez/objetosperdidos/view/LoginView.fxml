<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.utez.objetosperdidos.view.LoginController"
            style="-fx-background-color: white;">

    <center>
        <HBox alignment="CENTER" style="-fx-alignment: center;">
            
            <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS"
                  style="-fx-padding: 40px; -fx-spacing: 20px; -fx-pref-width: 400px; -fx-min-width: 350px;">
                
                <Label text="¡Bienvenido!" style="-fx-text-fill: #5A777D; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label text="Iniciar Sesión Objetos Perdidos" style="-fx-font-size: 24px;"/>
                
                <VBox spacing="15" alignment="CENTER_LEFT"
                      style="-fx-padding: 30px; -fx-min-width: 300px;">
                    
                    <Label text="Usuario/Correo" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="emailField" promptText="Example@utez.edu.mx"
                               style="-fx-pref-width: -1; -fx-pref-height: 35px; -fx-border-color: #cccccc; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 14px; -fx-padding: 0 10px;"/>
                    
                    <Label text="Contraseña" style="-fx-font-weight: bold;"/>
                    <PasswordField fx:id="passwordField"
                                   style="-fx-pref-width: -1; -fx-pref-height: 35px; -fx-border-color: #cccccc; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-font-size: 14px; -fx-padding: 0 10px;"/>

                    <Label fx:id="messageLabel" text="" wrapText="true"
                           style="-fx-text-fill: black; -fx-font-size: 13px; -fx-padding: 5px 0 0 0;"/>
                    
                    <HBox alignment="CENTER">
                        <Button text="Iniciar Sesión" onAction="#onSignIn"
                                style="-fx-background-color: #62C070; -fx-text-fill: white; -fx-pref-width: 300px; -fx-pref-height: 40px; -fx-font-weight: bold; -fx-background-radius: 5px;"/>
                    </HBox>

                    <Separator style="-fx-padding: 10px 0;"/>
                    
                    <HBox spacing="5" alignment="CENTER">
                        <Label text="¿No tienes una cuenta?"/>
                        <Hyperlink text="Registrarse" onAction="#onSignUpLink"
                                   style="-fx-text-fill: #5BBCE9; -fx-underline: true; -fx-padding: 0;"/>
                    </HBox>
                    
                    <HBox alignment="CENTER">
                        <Hyperlink text="Leer Políticas de privacidad" onAction="#onPrivacy"
                                   style="-fx-text-fill: #5BBCE9; -fx-padding: 5px 0;"/>
                    </HBox>
                </VBox>
            </VBox>

            <AnchorPane fx:id="anchorImage"
                        HBox.hgrow="ALWAYS"
                        style="-fx-pref-width: 500px; -fx-min-width: 350px;">
            </AnchorPane>

        </HBox>
    </center>
</BorderPane>
