<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.utez.objetosperdidos.view.LoginController">

    <center>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20;">
            <Label text="Iniciar sesión" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <TextField fx:id="emailField" promptText="Correo institucional" />
            <PasswordField fx:id="passwordField" promptText="Contraseña" />
            <CheckBox fx:id="rememberCheck" text="Recuérdame" />
            <Button text="Ingresar" onAction="#onSignIn" />
            <Label fx:id="messageLabel" textFill="red" />
            <HBox spacing="5">
                <Label text="¿No tienes cuenta?" />
                <Hyperlink text="Registrarse" onAction="#onSignUpLink" />
            </HBox>
            <Hyperlink text="Aviso de privacidad" onAction="#onPrivacy" />
        </VBox>
    </center>
</BorderPane>
