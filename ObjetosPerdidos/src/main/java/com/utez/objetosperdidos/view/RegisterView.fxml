<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.utez.objetosperdidos.view.RegisterController">

    <center>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20;">
            <Label text="Registro" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <TextField fx:id="nameField" promptText="Nombre completo" />
            <TextField fx:id="matriculaField" promptText="Matrícula" />
            <TextField fx:id="phoneField" promptText="Teléfono" />
            <TextField fx:id="emailField" promptText="Correo institucional" />
            <PasswordField fx:id="passwordField" promptText="Contraseña" />
            <CheckBox fx:id="rememberCheck" text="Recuérdame" />
            <Button text="Registrarse" onAction="#onSignUp" />
            <Label fx:id="messageLabel" textFill="red" />
            <HBox spacing="5">
                <Label text="¿Ya tienes cuenta?" />
                <Hyperlink text="Inicia sesión" onAction="#onSignInLink" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
