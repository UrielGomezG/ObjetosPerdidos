<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.utez.objetosperdidos.view.RegisterController"
           prefWidth="700" prefHeight="650"
           style="-fx-background-color: linear-gradient(to bottom right, #87CF92, #ABDDB3);">

    <VBox alignment="CENTER"
          prefWidth="450" prefHeight="580"
          style="-fx-background-color: #FFFFFF; -fx-padding: 35; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 20, 0, 0, 10);">
        <children>
            <Label text="Registro de Usuario" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #62C070; -fx-padding: 0 0 25px 0;">
                <font>
                    <Font name="System Bold" size="30.0" />
                </font>
            </Label>

            <TextField fx:id="nameField" promptText="Nombre Completo"
                       style="-fx-pref-height: 45px; -fx-border-color: #BDC3C7; -fx-border-width: 1px; -fx-border-radius: 8px; -fx-background-radius: 8px; -fx-font-size: 15px; -fx-padding: 0 15px; -fx-background-color: #E2E9EF;">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </TextField>
            <TextField fx:id="matriculaField" promptText="Matrícula"
                       style="-fx-pref-height: 45px; -fx-border-color: #BDC3C7; -fx-border-width: 1px; -fx-border-radius: 8px; -fx-background-radius: 8px; -fx-font-size: 15px; -fx-padding: 0 15px; -fx-background-color: #E2E9EF;">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </TextField>
            <TextField fx:id="phoneField" promptText="Teléfono (10 dígitos)"
                       style="-fx-pref-height: 45px; -fx-border-color: #BDC3C7; -fx-border-width: 1px; -fx-border-radius: 8px; -fx-background-radius: 8px; -fx-font-size: 15px; -fx-padding: 0 15px; -fx-background-color: #E2E9EF;">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </TextField>
            <TextField fx:id="emailField" promptText="Correo Institucional (@utez.edu.mx)"
                       style="-fx-pref-height: 45px; -fx-border-color: #BDC3C7; -fx-border-width: 1px; -fx-border-radius: 8px; -fx-background-radius: 8px; -fx-font-size: 15px; -fx-padding: 0 15px; -fx-background-color: #E2E9EF;">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </TextField>
            <PasswordField fx:id="passwordField" promptText="Contraseña (mín. 8 caracteres)"
                           style="-fx-pref-height: 45px; -fx-border-color: #BDC3C7; -fx-border-width: 1px; -fx-border-radius: 8px; -fx-background-radius: 8px; -fx-font-size: 15px; -fx-padding: 0 15px; -fx-background-color: #E2E9EF;">
                <VBox.margin>
                    <Insets bottom="20.0" />
                </VBox.margin>
            </PasswordField>

            <Button text="Registrarse" onAction="#onSignUp"
                    prefHeight="50.0" prefWidth="250.0"
                    style="-fx-background-color: #62C070; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 10px; -fx-cursor: hand;">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="15.0" />
                </VBox.margin>
            </Button>

            <Label fx:id="messageLabel" textFill="#D32F2F" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10px 0;" />

            <HBox spacing="5" alignment="CENTER" VBox.vgrow="ALWAYS" style="-fx-padding: 15px 0 0 0;">
                <Label text="¿Ya tienes cuenta?" style="-fx-font-size: 14px; -fx-text-fill: #555555;" />
                <Hyperlink text="Inicia sesión aquí" onAction="#onSignInLink"
                           style="-fx-text-fill: #62C070; -fx-underline: true; -fx-font-size: 14px; -fx-cursor: hand;" />
            </HBox>
        </children>
    </VBox>
</StackPane>